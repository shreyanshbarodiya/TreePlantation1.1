<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tree_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.ac.iitb.treeplantationapp.NearbyTrees.TreeDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/tvDetails" />

    <Button
        android:text="Adopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetails"
        android:layout_alignParentStart="true"
        android:layout_marginTop="97dp"
        android:id="@+id/btnAdopt" />

    <Button
        android:text="Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAdopt"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnUpload" />

    <Button
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnUpload"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnGallery" />

    <Button
        android:text="Write Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdopt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:id="@+id/btnWriteReview" />

    <Button
        android:text="See review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnWriteReview"
        android:layout_alignEnd="@+id/btnUpload"
        android:id="@+id/btnSeeReviews" />

    <Button
        android:text="Alert owners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSeeReviews"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnAlert" />

</RelativeLayout>
